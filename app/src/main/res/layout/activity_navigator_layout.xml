<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="navigator"
        android:text="BasicCalculator"
        android:id="@+id/btnCalc"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="navigator"
        android:text="GreetUser"
        android:id="@+id/btngreetUser"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="navigator"
        android:text="Jokes"
        android:id="@+id/btnjokes"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FelightNews"
        android:id="@+id/btnFelightNews"
        android:onClick="navigator"
        android:layout_gravity="center_horizontal"
        android:background="#a4ff72" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GoogleNews"
        android:id="@+id/btnGoogleNews"
        android:onClick="navigator"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tree"
        android:id="@+id/btntree"
        android:onClick="navigator"
        android:layout_gravity="center_horizontal" />

</LinearLayout>